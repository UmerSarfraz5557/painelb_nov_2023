<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="@dimen/_5sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_large_huge"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="@string/sharedto"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:id="@+id/text_share_ll"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">


            <ImageView
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/conversation"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="@string/via_text"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pdf_share_ll"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">


            <ImageView
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/document"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="@string/via_pdf"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/image_share_ll"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">


            <ImageView
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="@string/via_image"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>